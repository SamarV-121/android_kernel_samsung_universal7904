/dts-v1/;
/plugin/;

#include "exynos7904-a30jpn_common.dtsi"
#include "exynos7904-a30_jpn_kdi_gpio_01.dtsi"
#include "exynos7904-a30_fingerprint_00.dtsi"

/ {
	compatible = "samsung,A30 JPN KDI 01", "samsung,EXYNOS7904";

	dtbo-hw_rev = <1>;
        dtbo-hw_rev_end = <1>;


	fragment@model {
		target-path = "/";
		__overlay__ {
			#address-cells = <2>;
			#size-cells = <1>;

			model = "Samsung A30 JPN KDI 01 board based on EXYNOS7904";

			i2c@20 {
				compatible = "i2c-gpio";
				gpios = <&gpp7 0 0
						&gpp7 1 0>;
				i2c-gpio,delay-us = <5>;
				pinctrl-names = "default","on_i2c","off_i2c";
				pinctrl-0 = <&grip_i2c>;
				pinctrl-1 = <&grip_i2c>;
				pinctrl-2 = <&grip_gpio>;
				#address-cells = <1>;
				#size-cells = <0>;
				status = "okay";
				tc3xxk@20 {
					compatible = "coreriver,tc3xx-grip";
					pinctrl-names = "default","on_irq","off_irq";
					pinctrl-0 = <&grip_int &grip_ldo>;
					reg = <0x20>;
					interrupts = <6 0 0>;
					interrupt-parent = <&gpa2>;
					coreriver,scl-gpio = <&gpp7 1 0>;
					coreriver,sda-gpio = <&gpp7 0 0>;
					coreriver,irq-gpio = <&gpa0 6 0>;
					coreriver,ldo_en = <&gpg1 3 0>;
					coreriver,i2c-gpio = "true";
					coreriver,boot-on-ldo = "true";
					coreriver,fw_name = "coreriver/tc305k_a30_jpn_grip.fw";
					coreriver,use_bitmap = <1>;
				};
			};

			speedy@11CE0000 {
				audio_codec_cod3035x: cod3035x@03 {
					mic-bias1-voltage = <3>;
					fake-jack-adc = <1951>;
					aux-cable-detect-adc = <1953>;
					water-threshold-min = <1955>;
					water-threshold-max = <3000>;
				};
			};
			sec_thermistor@6 {
				compatible = "samsung,sec-cf-thermistor";
				status = "okay";

				adc_array = <275 324 380 450 528 619 729 856 1003 1161
					1345 1545 1766 1980 2222 2457 2685 2901 3102 3279
					3426 3551 3659>;
				temp_array = <900 850 800 750 700 650 600 550 500 450
					400 350 300 250 200 150 100 50 0 (-50)
					(-100) (-150) (-200)>;

				io-channels = <&exynos_adc 6>;
				io-channel-names = "adc-cf-temp";
				io-channel-ranges;
			};
		}; /* end of __overlay__ */
	}; /* end of fragment */
}; /* end of root */

&pinctrl_0 {	/*11CB0000*/
	nfc_clk: nfc-clk {
		samsung,pins = "gpq0-0";
		samsung,pin-function = <2>;
		samsung,pin-pud = <0>;
	};

	nfc_clk_nc: nfc-clk-nc {
		samsung,pins = "gpq0-0";
		samsung,pin-function = <0>;
		samsung,pin-pud = <1>;
	};

	nfc_int: nfc-int {
		samsung,pins = "gpa1-0";
		samsung,pin-function = <0>;
		samsung,pin-pud = <1>;
	};
};

&pinctrl_3 {	/*139B0000*/
	nfc_pvdd_en: nfc_pvdd_en {
		samsung,pins = "gpp6-4";
		samsung,pin-function = <1>;
		samsung,pin-pud = <0>;
		samsung,pin-val = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_firm: nfc_firm {
		samsung,pins = "gpp3-2";
		samsung,pin-function = <1>;
		samsung,pin-pud = <0>;
		samsung,pin-val = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_pd: nfc_pd {
		samsung,pins = "gpp2-2";
		samsung,pin-function = <2>;
		samsung,pin-pud = <0>;
		samsung,pin-drv = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_clk_req: nfc_clk_req {
		samsung,pins = "gpp2-3";
		samsung,pin-function = <2>;
		samsung,pin-pud = <1>;
		samsung,pin-drv = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_det: nfc-det {
		samsung,pins = "gpg2-2";
		samsung,pin-function = <0>;
		samsung,pin-pud = <0>;
	};
};

&usi_0 {
	usi_mode = "hsi2c0_hsi2c1";
	status = "okay";
};

&hsi2c_5{
	status = "okay";
	clock-frequency = <400000>;
	sec-nfc@27{
		compatible = "sec-nfc";
		reg = <0x27>;

		interrupt-parent = <&gpa1>;
		interrupts = <0 0 0>;

		sec-nfc,nfc_pd = <&gpp2 2 0x2>;
		sec-nfc,firm-gpio = <&gpp3 2 1>;
		sec-nfc,irq-gpio = <&gpa1 0 0>;
		sec-nfc,nfc_clkreq = <&gpp2 3 0x2>;
		sec-nfc,pvdd_en = <&gpp6 4 1>;
		sec-nfc,check_nfc =<&gpg2 2 0x0>;
		clkctrl-reg = <0x11C8600C>;

		pinctrl-names = "default";
		pinctrl-0 = <&nfc_pd &nfc_firm &nfc_int &nfc_pvdd_en &nfc_det &nfc_clk_nc>;
	};
};

&i2c_6 {
 	        status = "okay";

 		#address-cells = <1>;
 		#size-cells = <0>;
 		samsung,i2c-sda-delay = <100>;
 		samsung,i2c-max-bus-freq = <400000>;
 		pinctrl-names = "default";
 		pinctrl-0 = <&i2c6_bus>;

 		lsm6dsl@6b {
 			compatible = "st,lsm6dsl";
 			reg = <0x6b>;
 			gpio-controller;
 			#gpio-cells = <2>;
 			pinctrl-names = "default";
 			pinctrl-0 = <&acc_int>;
 			interrupt-parent = <&gpa0>;
 			interrupts = <3 0 0>;
 			st,irq_gpio = <&gpa0 3 0>;
 			st,orientation = <0 1 1 1 0 1 1 1 2>;
 		};

		ams_dax@39 {
			compatible = "ams,tcs3701";
			reg = <0x39>;
			ams,light_position = <51 81 2 59 1 80>;
		};

		yas539@2e {
			compatible = "yas_magnetometer";
			reg = <0x2e>;
			yas,orientation = <3>;
			yas,softiron = <10593 56 23 56 9020 20 23 20 10386>;
			yas,softiron_sign = <2 0 2 0 2 0 2 0 2>;
		};

};

&i2c_5 {
  	        status = "okay";

 		#address-cells = <1>;
 		#size-cells = <0>;
 		samsung,i2c-sda-delay = <100>;
 		samsung,i2c-max-bus-freq = <400000>;
 		pinctrl-names = "default";
 		pinctrl-0 = <&i2c5_bus>;

 		stk@47 {
			compatible = "stk,stk3x3x";
			reg = <0x47>;
			pinctrl-names = "default";
			pinctrl-0 = <&prox_led_en &proxy_int>;
			interrupt-parent = <&gpa0>;
			interrupts = <4 0 0>;
			stk,gpio_int = <&gpa0 4 0>;
			stk,prox_thd_h = <0>;
			stk,prox_thd_l = <0>;

		};
};
/ {
	
	pinctrl@11CB0000 {
		grip_irq: grip-irq {
			samsung,pins = "gpa2-7";
			samsung,pin-function = <0xf>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};

		grip_input: grip-input {
			samsung,pins = "gpa2-7";
			samsung,pin-function = <0>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};
	};

	pinctrl@139B0000 {
		i2c5_bus: i2c5-bus {
			samsung,pins = "gpp4-3", "gpp4-2";
			samsung,pin-function = <2>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};

		i2c6_bus: i2c6-bus {
			samsung,pins = "gpp4-5", "gpp4-4";
			samsung,pin-function = <2>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};

		grip_i2c: grip-i2c {
			samsung,pins = "gpp7-1", "gpp7-0";
			samsung,pin-function = <2>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};

		grip_gpio: grip-gpio {
			samsung,pins = "gpp7-1", "gpp7-0";
			samsung,pin-function = <0>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};
		grip_en: grip-en {
			samsung,pins = "gpg1-6";
			samsung,pin-function = <1>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};
	};

	i2c_5:i2c@13880000 {
		status = "okay";
		#address-cells = <1>;
		#size-cells = <0>;
		samsung,i2c-sda-delay = <100>;
		samsung,i2c-max-bus-freq = <400000>;
		pinctrl-names = "default";
		pinctrl-0 = <&i2c5_bus>;

		stk@47 {
			compatible = "stk,stk3x3x";
			reg = <0x47>;
			interrupt-parent = <&gpa0>;
			interrupts = <4 0 0>;
			stk,gpio_int = <&gpa0 4 0>;
			stk,prox_thd_h = <150>;
			stk,prox_thd_l = <140>;
			stk,sunlight_thd_h = <150>;
			stk,sunlight_thd_l = <140>;
			stk,first_cal_adc_limit = <120>;
			stk,first_cal_thd_h = <150>;
			stk,first_cal_thd_l = <140>;
		};
	};

	i2c_6: i2c@13890000 {
		status = "okay";
		#address-cells = <1>;
		#size-cells = <0>;
		samsung,i2c-sda-delay = <100>;
		samsung,i2c-max-bus-freq = <400000>;
		pinctrl-names = "default";
		pinctrl-0 = <&i2c6_bus>;

		lsm6dsl@6b {
			compatible = "st,lsm6dsl";
			reg = <0x6b>;
			interrupt-parent = <&gpa0>;
			interrupts = <3 0 0>;
			st,irq_gpio = <&gpa0 3 0>;
			st,orientation = <1 0 1 2 1 1 1 1 2>;
		};

		yas539@2e {
			compatible = "yas_magnetometer";
			reg = <0x2e>;
			yas,orientation = <6>;
			yas,softiron = <9593 45 221 175 10436 57 378 26 10803>;
			yas,softiron_sign = <2 2 0 2 2 0 2 2 2>;
		};
	};

	i2c@20 {
		compatible = "i2c-gpio";
		gpios = <&gpp7 0 0
				&gpp7 1 0>;
		i2c-gpio,delay-us = <5>;
		pinctrl-names = "default","on_i2c","off_i2c";
		pinctrl-0 = <&grip_i2c>;
		pinctrl-1 = <&grip_i2c>;
		pinctrl-2 = <&grip_gpio>;
		#address-cells = <1>;
		#size-cells = <0>;
		status = "okay";
		tc3xxk@20 {
			compatible = "coreriver,tc3xx-grip";
			pinctrl-names = "default","on_irq","off_irq";
			pinctrl-0 = <&grip_irq &grip_en>;
			pinctrl-1 = <&grip_irq>;
			pinctrl-2 = <&grip_input>;
			reg = <0x20>;
			interrupts = <7 0 0>;
			interrupt-parent = <&gpa2>;
			coreriver,scl-gpio = <&gpp7 1 0>;
			coreriver,sda-gpio = <&gpp7 0 0>;
			coreriver,irq-gpio = <&gpa2 7 0>;
			coreriver,ldo_en = <&gpg1 6 0>;
			coreriver,i2c-gpio = "true";
			coreriver,boot-on-ldo = "true";
			coreriver,fw_name = "coreriver/tc305k_m30_grip.fw";
			coreriver,use_bitmap = <1>;
		};
	};
};
